#:kivy 2.0.0
<AdicionaRetirada>:

    #Elementos que serão trabalhados pelo .py
    getDescricao: getDescricao
    getValor: getValor
    setConta: setConta
    setSaldo: setSaldo
    labelDesc: labelDesc
    erroValor: erroValor
    erroDesc: erroDesc

    BoxLayout:
        size_hint_y: 1
        #Esse spancing é do mesmo tamanho 
        # que a altura da sombra
        spacing: root.width/100
        #Cabeçalho
        BoxLayout:
            size_hint_y: 0.15
            spacing: 0
            padding: 0
            orientation: "horizontal"
            #Cor
            canvas:
                Color:
                    rgba: 0.99,0.81,0.81,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (root.width/20, root.width/20), (root.width/20, root.width/20)]
            #Sombra
            canvas.before:
                Color:
                    rgba: 0.94,0.94,0.94,1
                RoundedRectangle:
                    #A subtração representa a altura da sombra
                    pos: self.pos[0], self.pos[1]-root.width/100
                    size: self.size
                    radius: [(0, 0), (0, 0), (root.width/20, root.width/20), (root.width/20, root.width/20)]
            #Botão de voltar
            AnchorLayout:
                anchor_y: "center"
                anchor_x: 'left'
                padding: root.width/20
                Button: 
                    background_normal: "imgs/btnVoltar.png"
                    background_down: "imgs/btnVoltar.png"
                    border: (0,0,0,0)
                    size: '24dp','24dp'
                    size_hint: (None, None)
                    on_press:
                        root.manager.current="principal"
                        root.manager.transition.direction="right"
                        #left para entrar na página
                        #right para sair
            #Título
            AnchorLayout:
                anchor_y: "center"
                anchor_x: 'center'
                Label:
                    text:'Saída'

            #Saldo
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'center'
                padding: root.width/20
                BoxLayout:
                    canvas.before:
                        Color:
                            rgba: 0.99,0.81,0.81,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: None, None
                    Label:
                        id: setSaldo
                        text: " "
                        font_size: "16sp"
                        height: self.texture_size[1]
                    Label:
                        id: setConta
                        text: " "
                        font_size: "14sp"
                        height: self.texture_size[1]
        #Formulário
        BoxLayout:
            #Distância das laterais
            padding: 50, 0
            AnchorLayout:
                anchor_y: 'top'
                anchor_x: 'center'
                BoxLayout:
                    size_hint_y: None
                    #CampoValor
                    Espacamento:
                    Label:
                        height: self.texture_size[1]+dp(20)
                        haling: "left"
                        text_size: self.width, None
                        text:'Valor:'
                    InputRetirada:
                        id: getValor
                        size_hint_x: 0.6
                        text: "R$ 0.00"
                        on_text:
                            root.adicionarMascara(getValor.text)
                    ErroCampo:
                        id: erroValor
                    Espacamento:

                    #CampoDescrição
                    Espacamento:
                    Label:
                        height: self.texture_size[1]+dp(20)
                        haling: "left"
                        text_size: self.width, None
                        text: "Descrição:"
                    LimitInputRetirada:
                        id: getDescricao
                        hint_text: "Onde você gastou esse dinheiro?"
                        on_text:
                            root.atualizaNumDescricao(getDescricao.text)
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        ErroCampo:
                            id: erroDesc
                        Label:
                            id: labelDesc
                            text: '0/35'
                            size_hint_x: 0.3
                            height: self.texture_size[1]
                            haling: "right"
                            text_size: self.width, None
                            color: (.6,.6,.6,1)
                            font_size: 14
                            halign: "right"
                            padding: root.width/70,0
                    Espacamento:
        #Botão adicionar
        BoxLayout:
            size_hint_y: 0.3
            orientation: "horizontal"
            Label:
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                BtnAdicionarRetirada:
                    size_hint_x: 1
                    on_press:
                        root.adicionaRetirada(getValor.text, getDescricao.text)
            Label:
    