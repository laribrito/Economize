#:kivy 2.0.0
#:include telas/config.kv 
<AlteraContas>:
    #Essa tela receberá um ScrollView pelo arquivo .py
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.98, 0.98, 0.98, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            canvas.before:
                Color: 
                    rgba: 0.81,0.84,0.99,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "\nSuas contas"
            pos_hint: {'y': .85}
            size_hint: 1, .2
    
    GridLayout:
        cols: 2
        padding: 20,0
        size_hint_y: 0.15
        spacing: 20
        FloatLayout:
            Button:
                size_hint_x: 0.7
                pos_hint: {'center_y': .5, "x": 0.15}
                text:'Voltar'
                background_normal: "telas/imgs/btnAzul02.png"
                background_down: "telas/imgs/btnAzul02.png"
                on_press:
                    root.manager.current="principal"
                    root.manager.transition.direction="right"
                    #left para entrar na página
                    #right para sair
        FloatLayout:
            Button:
                text:'Nova Conta'
                pos_hint: {'center_y': .5, "right": 0.94}
                height: self.texture_size[1] + dp(30)
                background_normal: "telas/imgs/btnAzul.png"
                background_down: "telas/imgs/btnAzul.png"
                on_press:
                    root.manager.current="adicionaConta"
                    root.manager.transition.direction="left"
                    #left para entrar na página
                    #right para sair
