<Screen>
    canvas.before:
        Color: 
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size

##################################################################################
<Label>
    #Cor dos textos
    color: 0,0,0,1
    # Altura do Label igual à altura do texto
    #   precisa ser copiado para não atrapalhar
    #   outros widgets
    # height: self.texture_size[1]
    size_hint_y: None
    #Tamanho padrão do label
    font_size: "20sp"
    haling: "center"

<Mensagem@Label>
    size: self.texture_size
    size_hint: (None, None)
    padding: (10, 5)
    texture_size: self.size
    halign: "center"
    font_size: 18

<Espacamento@Label>
    height: self.texture_size[1]
    text_size: self.width, None
    size_hint_y: None
    text: ' '

<ErroCampo@Label>
    text: " "
    height: self.texture_size[1]
    haling: "left"
    text_size: self.width, None
    color: (.6,0,0,1)
    font_size: 14
    padding: root.width/70,0

##################################################################################
<Button>
    #Cor dos textos dos botões
    color: 1,1,1,1
    #Altura dos botões
    #   precisa ser copiado para não atrapalhar
    #   outros widgets
    size_hint_y: None
    height: self.texture_size[1] + dp(20)

<BtnCancelarRetirada@Button>
    text:'Cancelar'
    size_hint_x: 0.40
    height: self.texture_size[1] + dp(15)
    background_normal: "imgs/btnVermelho02.png"
    background_down: "imgs/btnVermelho02.png"

<BtnCancelarGanho@Button>
    text:'Cancelar'
    size_hint_x: 0.40
    height: self.texture_size[1] + dp(15)
    background_normal: "imgs/btnVerde02.png"
    background_down: "imgs/btnVerde02.png"

<BtnCancelarConta@Button>
    text:'Cancelar'
    size_hint_x: 0.40
    height: self.texture_size[1] + dp(15)
    background_normal: "imgs/btnAzul02.png"
    background_down: "imgs/btnAzul02.png"

<BtnAdicionarRetirada@Button>
    text:'Adicionar'
    size_hint_x: 0.5
    background_normal: "imgs/btnVermelho.png"
    background_down: "imgs/btnVermelho.png"

<BtnAdicionarGanho@Button>
    text:'Adicionar'
    size_hint_x: 0.5
    background_normal: "imgs/btnVerde.png"
    background_down: "imgs/btnVerde.png"

##################################################################################
<TextInput>
    # Altura do TextInput igual a uma linha de texto + 20 (10 de espaço em cima e embaixo)
    size_hint_y: None
    height: self.line_height + dp(20)
    padding: (6, dp(10), 6, dp(10)) 
    # Sem múltiplas linhas
    multiline: False
    # O TAB não entra no texto, ao invés disso, pula pro próximo campo
    write_tab: False
    #Cor do cursor
    cursor_color: (0,0,0,1)
    #Imagem normal
    background_normal: "imgs/bordaBotao.png"

<InputConta@TextInput>
    #Imagem no foco
    background_active: 'imgs/bordaBotaoAtivoAzul.png'

<InputGanho@TextInput>
    #Imagem no foco
    background_active: 'imgs/bordaBotaoAtivoVerde.png'

<InputRetirada@TextInput>
    #Imagem no foco
    background_active: 'imgs/bordaBotaoAtivoVermelho.png'

##################################################################################
<ScrollView>
    # Rolagem apenas na vertical
    do_scroll_x: False
    do_scroll_y: True
    canvas.before:
        Color: 
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size

##################################################################################
<BoxLayout>
    # Configuração necessária para o ScrollView funcionar
    height: self.minimum_height

    # Orientação da tela
    orientation: 'vertical'
    canvas.before:
        Color: 
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size

##################################################################################
<GridLayout>
    # Configuração necessária para o ScrollView funcionar
    height: self.minimum_height
    canvas.before:
        Color: 
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size