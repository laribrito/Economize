#:kivy 2.0.0
#:include telas/config.kivy
<Principal>:
    setMensagem: setMensagem
    setSaldo: setSaldo
    setConta: setConta
    BoxLayout:
        orientation:'vertical'
        Label:
            id: setSaldo
            text:'Olá!'
        Label:
            id: setConta
            text:''
        Label:
            id: setMensagem
        Button:
            text:'Adiciona ganho'
            on_press:
                root.manager.current="adicionaGanho"
                root.manager.transition.direction="left"
                #left para entrar na página
                #right para sair
        Button:
            text:'Adiciona retirada'
            on_press:
                root.manager.current="adicionaRetirada"
                root.manager.transition.direction="left"
                #left para entrar na página
                #right para sair
        Button:
            text:'Adiciona conta'
            on_press:
                root.manager.current="adicionaConta"
                root.manager.transition.direction="left"
                #left para entrar na página
                #right para sair
        Button:
            text:'Suas contas'
            on_press:
                root.manager.current="alternaConta"
                root.manager.transition.direction="left"
                #left para entrar na página
                #right para sair